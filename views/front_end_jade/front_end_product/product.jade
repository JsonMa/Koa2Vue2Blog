// 集成模板
extends ../front_end_layout
block title
    title 产品中心

// 引入私有的css
block css
    link(rel='stylesheet', href='/css/front_end/front_end_product/product.css')

block content
    .banner-container
    .content-container
        .content-title
            h3.title 产品中心  PRODUCT
            p.subtitle 首页>>产品中心>>
                span 磁力泵系列
        .content-detail
            .content-detail-left
                .detail-title
                    h4 磁力泵系列
                    hr
                .detail-content-contact
                    .detail-top
                        .product--content
                            ul
                                - for (var index in pumpData)
                                    li
                                        - var pump = pumpData[index];
                                        .product-content-left
                                            img(src="#{pump.imgUrl}" alt="#{pump.name}")
                                        .product-content-right
                                            a.product-name(href="../product/detail?page=#{pageNum}&id=#{pump._id}&type=pumps") #{pump.name}#{pump.safeStage}
                                            p 结构：#{pump.params.structure}
                                            p 设计标准：#{pump.params.standard}
                                            p 流量：#{pump.params.flow}
                                            p 扬程：#{pump.params.high}
                                            p 温度：#{pump.params.temperature}
                                            p 压力：#{pump.params.pressure}

                    .detail-bottom
                        include ../front_end_paging.jade
            .content-detail-right
                .about-nav
                    h4  栏目列表
                    ul
                        li
                            a(href="../product/pumps/:series='magnetic'") 磁力泵系列
                        li
                            a(href="../product/pumps/:series='chemical'") 化工泵系列
                        li
                            a(href="../product/pumps/:series='pitot'") 皮托管泵系列
                        li
                            a(href="../product/seals") 机械密封系列
                .hot-recommend
                    h4 热点内容
                    ul
                        li
                            a.title 2016年度工作总结
                            span.title-date 2017-12-11

                        li
                            a.title 2016年度工作总结,第二代旋壳泵研发成功了，大家都很高兴
                            span.title-date 2017-12-11

                        li
                            a.title 2016年度工作总结
                            span.title-date 2017-12-11

                        li
                            a.title 2016年度工作总结
                            span.title-date 2017-12-11

// 引入私有的js
block js
    script(src='/js/front_end/front_end_product/pump.js')
